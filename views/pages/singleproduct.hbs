{{> navbar}}
{{>title}}
<div class="container">
    <div class="custom-container container my-5">
        <div class="row g-4">
            <!-- Left Column with Card containing the Image -->
            <div class="col-md-6">
                <div class="image-container-card d-flex justify-content-center">
                    <img  src="../../public/uploads/{{product.default_image}}" alt="Vortex Flow Meter" class="img-fluid">
                </div>
            </div>

            <!-- Right Column with Product Details -->
            <div class="col-md-6 pt-2">
                <span class="custom-product-series"><strong>{{product.sku}}</strong></span>
                <p class="custom-product-description">
                    {{product.short_description}} <br><br>
                     <span class="spec-label">specifications</span>:{{product.specifications}}
                    <br>
                    <span class="spec-label">Size</span>: 15mm to 300mm<br>
                    <span class="spec-label">Max Pressure</span>: 16 Bar<br>
                    <span class="spec-label">Display</span>: InBuilt LCD Display<br>
                    <span class="spec-label">Process Temp.</span>: less than 250 Degree Celsius <br>
                    <span class="spec-label">Power Supply</span>: 230VAC For Mee Inlet Steam <br>
                    <span class="spec-label">Accuracy</span>: +1.0% <br>
                    <span class="spec-label">Output</span>: 4-20mA/RS485<br>
                    <span class="spec-label">Connection</span>: Wafer Type<br>
                    <span class="spec-label">Principle of measure</span>: Vortex Method with pressure<br>
                    <span class="spec-label">Application</span>: Steam(Air), Water
                </p>
                <div class="pt-3">
                    {{> button text="Download Brochure" model="modal" target="#brochureModal" }}
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container features-section mt-5">
        <h2 class="custom-features-title">Description</h2>
        <div class="row">
            <p>{{product.description}}.</p>
        </div>
    </div>
    {{!-- related products --}}
