<html lang='en'>

<head>
  <meta charset='utf-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1' />
  <title>{{title}}</title>
  <link rel="icon" href="/public/img/favicon.svg" type="image/x-icon">
  <link rel='stylesheet' href='/css/bootstrap.min.css' />
  <script src='/public/js/bootstrap.bundle.js'></script>
  <script src='/public/js/script.js'></script>
  <link rel='stylesheet' href='/css/style.css' />
  <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css' />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>


<body>
  <section class='navbar-shadow sticky-top bg-white'>
    <!-- Top Section (Email List and Navigation) -->
    <div class="top-nav text-white">
      <div class="container d-none d-sm-block">
        <div class="top-padding">
          <div class="row">
            <!-- Left Column -->
            <div class="col-md-5 ps-4">
              <ul class="nav">
                <li class="nav-item">
                  <a class="top-nav-link nav-link text-white" href="#">Press</a>
                </li>
                <li class="nav-item">
                  <a class="top-nav-link nav-link text-white" href="#">Event & Training</a>
                </li>
                <li class="nav-item">
                  <a class="top-nav-link nav-link text-white" href="career">Career</a>
                </li>
              </ul>
            </div>
            <!-- Right Column -->
            <div class="col-md-7 ">
              <ul class="nav justify-content-end">
                <li class="nav-item"></li>
                  <a class="top-nav-link nav-link text-white" href="#">
                    <i class="fas fa-download me-2"></i>Downloads
                  </a>
                </li>
                <li class="nav-item">
                  <a class="top-nav-link nav-link text-white" href="#">
                    <i class="fas fa-user me-2"></i>Log In
                  </a>
                </li>
                <li class="nav-item d-flex align-items-center">
                  <i class="fas fa-globe "></i>
                  <select id="custom_translate_dropdown" class="form-select" onchange="translatePage()">
                    <option class="custom_option" value="en">English</option>
                    <option class="custom_option" value="fr">French</option>
                    <option class="custom_option" value="de">Deutsch</option>
                    <option class="custom_option" value="es">Spanish</option>
                    <option class="custom_option" value="zh-CN">Chinese</option>
                  </select>
                </li>

                <!-- Placeholder for Google Translate -->
                <div id="google_translate_element" style="display: none;"></div>
                
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>


    <!-- Bottom Section (Navbar) -->
    <div class='container'>
      <div class='bottom-padding'>
        <nav class='navbar navbar-expand-lg '>
          <div class='container-fluid'>
            <a class='navbar-brand' href='/'>
              <img src='/public/img/upc-logo.svg' alt='UPC Instruments' style='height: 75px;' />
              <!-- Adjust the height as needed -->
            </a>
            <button class='navbar-toggler' type='button' data-bs-toggle='collapse'
              data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false'
              aria-label='Toggle navigation'>
              <span class='navbar-toggler-icon'></span>
            </button>
            <div class='collapse navbar-collapse' id='navbarSupportedContent'>
              <!-- Use ms-auto to align the menu items to the right -->
              <ul class='navbar-nav ms-auto mb-2 mb-lg-0'>

                <!-- Nested Dropdown 1 -->
                <li class='nav-item'></li>
                  <a class='nav-link main-nav-link text-dark ' aria-current='page' href='{{baseURL}}about'>About Us</a>
                </li>
                <li class='nav-item dropdown'>
                  <a class='nav-link main-nav-link dropdown-toggle text-dark' href='#' id='navbarDropdownMenuLink'
                    role='button' data-bs-toggle='dropdown' aria-expanded='false'>
                    Products
                    <i class='fas fa-chevron-down ms-2'></i> <!-- Font Awesome down arrow -->
                  </a>
                   <ul class='dropdown-menu' aria-labelledby='navbarDropdownMenuLink'>
                    <!-- Nested Dropdown 1 -->
                    {{#each categories.data}}
                    <li class='dropdown-submenu'>                                 
                      <a href="{{../baseURL}}category/{{this.slug}}" class="my-custom-link dropdown-item">{{this.category_name}}                              
                        {{!-- <i class='fas fa-chevron-right'></i> <!-- Right arrow for nested dropdown --> --}}
                      </a>
                      {{!-- <ul class='dropdown-menu'>
                        <li><a class='dropdown-item text-wrap' href='singleproduct'>Vortex Flow Meter</a></li>
                        <li><a class='dropdown-item text-wrap' href='#'> Turbine Flow Meter </a></li>
                        <li><a class='dropdown-item text-wrap' href='#'>Insertion Type Electromagnetic Flow Meter</a></li>
                      </ul> --}}
                    </li>
                    {{/each}}
                  </ul>
                </li>
                <li class='nav-item'>
                  <a class='nav-link main-nav-link text-dark' href='{{baseURL}}industries'>Industries</a>
                </li>
                <li class='nav-item'>
                  <a class='nav-link main-nav-link text-dark' href="{{baseURL}}blog">Blog</a>
                </li>
                <li class='nav-item'>
                  <a class='nav-link main-nav-link text-dark' aria-current='page' href="{{baseURL}}contacts">Contact Us</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      </div>
    </div>
  </section>
</body>